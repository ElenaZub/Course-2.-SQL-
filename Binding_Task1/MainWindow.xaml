<Window x:Class="Binding_Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binding_Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="TextBox1" Text="Text1"/>
        <Label Grid.Row="1" Grid.Column="2" Content="{Binding ElementName=TextBox1, Path=Text}"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="TextBox2" Text="Text2"/>
        <Label Grid.Row="3" Grid.Column="2" Content="{Binding ElementName=TextBox2, Path=Text}"/>
    </Grid>
</Window>
