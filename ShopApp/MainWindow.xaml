<Window
    x:Class="ShopApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ShopApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:View;assembly=View"
    Title="MainWindow"
    Width="800"
    Height="500"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="Sales">
            <view:CustomersListView Margin="2" />
        </TabItem>
        <TabItem Header="Product">
            <view:ProductsListView Margin="2" />
        </TabItem>
    </TabControl>
</Window>
